<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <title>Listagem</title>
    <%- include('./partials/headers') %>
</head>

<body>
    <%- include('./partials/navbar'); %>
        <header class="masthead">
            <div class="container px-4 px-lg-5 h-100">
                <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
                    <div class="col-lg-8 align-self-baseline">
                        <main>
                            <section>
                                <div class="container">
                                    <h2 style="color: white">Seu portifólio</h2>
                                    <table class="table table-bordered table-hover text-center ">
                                        <thead class="thead-dark p-3 mb-2 bg-light text-dark align-self-center">
                                            <tr>
                                                <th>Pontuação</th>
                                                <th>Titulo</th>
                                                <th>Vestibular</th>
                                                <th>Tema</th>
                                                <th>Ações</th>
                                            </tr>
                                        </thead>
                                        <tbody class="tbody-dark p-3 mb-2 bg-white text-dark ">
                                            <% dataText.forEach(function(data) { %>
                                                <tr>
                                                    <td>
                                                        <%= data.num_media %>
                                                    </td>
                                                    <td>
                                                        <%= data.title %>
                                                    </td>
                                                    <td>
                                                        <%= data.institute %>
                                                    </td>
                                                    <td>
                                                        <%= data.topic %>
                                                    </td>

                                                    <td> <a href="/readRedation/<%= data.id %>" style="text-decoration: none;">
                                                            <span class="material-icons ">Ler redação </span>
                                                        </a>
                                                        <a href="/showComments/<%= data.id %>" style="text-decoration: none;">
                                                            <span class="material-icons ">Comentarios </span>
                                                        </a>
                                                        <a href="/delete/<%= data.id %>" style="text-decoration: none;">
                                                            <span class="material-icons ">Apagar </span>
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </section>
                        </main>
                    </div>
                </div>
            </div>
        </header>
</body>

</html>